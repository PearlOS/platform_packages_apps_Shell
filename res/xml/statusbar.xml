<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">
    <Preference
            android:title="@string/statusbar_tuner_title" >
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.StatusbarItemsActivity" />
    </Preference>

    <Preference
         android:key="status_bar_clock"
         android:fragment="com.shell.extras.fragments.ClockDateSettings"
         android:icon="@drawable/ic_status_bar_clock"
         android:title="@string/status_bar_clock_title" />

    <Preference
            android:key="battery_settings"
            android:title="@string/battery_style_category_title"
            android:icon="@drawable/ic_battery_title"
            android:summary="@string/battery_style_category_summary"
            android:fragment="com.shell.extras.fragments.StatusBarBattery" />

    <PreferenceCategory
        android:key="statusbar_ntraffic"
        android:title="@string/statusbar_ntraffic" >

    <Preference
         android:key="network_traffic"
         android:title="@string/traffic_title"
         android:icon="@drawable/ic_traffic"
         android:summary="@string/traffic_summary"
         android:fragment="com.shell.extras.fragments.NetworkTraffic" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="notification_heads"
        android:title="@string/notification_heads" >

            <com.shell.extras.preferences.SystemSettingSwitchPreference
            android:key="less_boring_heads_up"
            android:title="@string/less_boring_heads_up_title"
            android:icon="@drawable/ic_headsup"
            android:summary="@string/less_boring_heads_up_summary"
            android:defaultValue="false" />

    </PreferenceCategory>

        <!-- Quick Settings panel -->
    <Preference
            android:key="quicksettings_category"
            android:title="@string/quick_settings_title"
            android:fragment="com.shell.extras.fragments.QuickSettings"/>

    <Preference
        android:key="statusbar_ticker"
        android:title="@string/status_bar_ticker_title"
        android:fragment="com.shell.extras.fragments.Ticker" />

    <PreferenceCategory
        android:key="statusbar_logo_cat"
        android:title="@string/statusbar_logo_category">

         <com.shell.extras.preferences.SystemSettingSwitchPreference
             android:key="status_bar_logo"
             android:title="@string/pe_logo_title"
             android:defaultValue="false"/>

        <ListPreference
            android:key="status_bar_logo_style"
            android:entries="@array/status_bar_logo_style_entries"
            android:entryValues="@array/status_bar_logo_style_values"
            android:summary="%s"
            android:dependency="status_bar_logo"
            android:title="@string/status_bar_logo_style_title" />
    </PreferenceCategory>
</PreferenceScreen>
